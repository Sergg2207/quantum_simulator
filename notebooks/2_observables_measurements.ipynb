# Celda 1: Importaciones
import sys
sys.path.append('..')
from quantum_simulator.core import QuantumSystem
from quantum_simulator.observables import Observable
import numpy as np

# Celda 2: Amplitud de transicion
print("=== Amplitud de Transicion ===")
system = QuantumSystem(2)
system.set_state([1, 1j])
target = [1j, 1]

transition_prob = system.transition_probability(target)
print(f"Probabilidad de transicion: {transition_prob:.4f}")

# Celda 3: Observable hermitiano
print("\n=== Observable Hermitiano ===")
observable_matrix = [[1, 1j], [-1j, 2]]
observable = Observable(observable_matrix)

mean_val = observable.mean(system.state)
variance_val = observable.variance(system.state)

print(f"Media: {mean_val:.4f}")
print(f"Varianza: {variance_val:.4f}")

# Celda 4: Valores propios y probabilidades
print("\n=== Valores Propios y Probabilidades ===")
eigenvalues, eigenvectors = observable.eigenvalues_eigenvectors()
print("Valores propios:", eigenvalues)

for i in range(len(eigenvalues)):
    prob = observable.probability_eigenvalue(system.state, i)
    print(f"Probabilidad de colapsar al vector propio {i}: {prob:.4f}")