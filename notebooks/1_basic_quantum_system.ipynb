import numpy as np

class QuantumSystem:
    """
    Sistema simple: partícula en N posiciones discretas.
    - state: vector de amplitudes complejas (numpy array, normalizado al establecerlo)
    """
    def __init__(self, N):
        if N <= 0 or not isinstance(N, int):
            raise ValueError("N debe ser entero positivo")
        self.N = N
        # estado por defecto: partícula en posición 0
        self._state = np.zeros(N, dtype=complex)
        self._state[0] = 1.0

    def set_state(self, amplitudes):
        """
        amplitudes: lista o array de longitud N con números (pueden ser complejos).
        Se normaliza internamente.
        """
        a = np.asarray(amplitudes, dtype=complex).reshape(-1)
        if a.size != self.N:
            raise ValueError(f"La lista de amplitudes debe tener longitud {self.N}")
        norm = np.linalg.norm(a)
        if norm == 0:
            raise ValueError("El vector de amplitudes no puede ser el vector cero")
        self._state = a / norm
        return self._state

    def get_state(self):
        return self._state.copy()

    def __str__(self):
        # representación compacta: vectores con amplitudes (a + bj)
        elems = [f"{c.real:.4g}{'+' if c.imag>=0 else ''}{c.imag:.4g}j" if c.imag!=0 else f"{c.real:.4g}" for c in self._state]
        return "QuantumSystem(N={}) state = [{}]".format(self.N, ", ".join(elems))

    def position_probability(self, index):
        """
        Probabilidad de encontrar la partícula en la posición `index` (0..N-1).
        """
        if not (0 <= index < self.N):
            raise IndexError("Índice de posición fuera de rango")
        amp = self._state[index]
        return float(np.abs(amp)**2)

    def get_probability_distribution(self):
        """Devuelve la lista/array de probabilidades por cada posición."""
        probs = np.abs(self._state)**2
        # Aseguramos que sumen 1 (puede haber redondeo numérico)
        probs = probs / probs.sum()
        return probs

# Ejemplo de uso

print("=== Sistema Cuantico Basico ===")
system = QuantumSystem(3)
# Nota: aceptamos números complejos literales como 2j
system.set_state([1, 2j, 1])
print(system)
print()

print("Probabilidades por posicion:")
for i in range(3):
    prob = system.position_probability(i)
    print(f"Posicion {i}: {prob:.4f}")

print("\nDistribucion completa de probabilidades:")
print(system.get_probability_distribution())
